{% extends '../layouts/default.twig' %}
{% block content %}
<section class="page-title wrapper clearfix" style="background-image: url('/ul/{{settings.header_bg.filename}}');">
	<div class="container">
		<div class="row">
			<div class="title-wrap wow fadeIn" data-wow-delay="1s">
				<h1>{{product.title}}</h1>
				<div class="breadcrumbs">
					<p>You Are Here : 
					<span><a href="/">Home</a></span>
					<span class="arrow"><i class="icon icon-arrow-right"></i></span>
					<span><a href="/products">Products</a></span>
					<span class="arrow"><i class="icon icon-arrow-right"></i></span>
					<span>View Product</span></p>
				</div>
			</div>
		</div>
	</div>
</section>
<section id="content" class="clearfix">
	<div class="single-services wrapper bg-color">
		<div class="container">
			<div class="row">
				<div class="single-services-wrap row">
					<div class="single-content col-md-9">
						<img src="/ul/{{product.image.filename}}" alt="" />
						<h3 class="title">{{product.title}}</h3>
						<div class="content-text">
							{{ product.content.extended }}
						</div>
						{% if product.showFeatures %}
						<div class="features-wrap row">
							<div class="col-md-4">
								<div class="features-item wow fadeInUp" data-wow-delay="0.3s">
									<div class="icon-wrap">
										<i class="icon icon-cargo"></i>
									</div>
									<div class="text">
										<h4>{{product.feature1.title}}</h4>
										<p>{{product.feature1.text}}</p>
									</div>
								</div>
							</div>
							<div class="col-md-4">
								<div class="features-item wow fadeInUp" data-wow-delay="0.6s">
									<div class="icon-wrap">
										<i class="icon icon-box-delivery"></i>
									</div>
									<div class="text">
										<h4>{{product.feature2.title}}</h4>
										<p>{{product.feature2.text}}</p>
									</div>
								</div>
							</div>
							<div class="col-md-4">
								<div class="features-item wow fadeInUp" data-wow-delay="0.9s">
									<div class="icon-wrap">
										<i class="icon icon-storage"></i>
									</div>
									<div class="text">
										<h4>{{product.feature3.title}}</h4>
										<p>{{product.feature3.text}}</p>
									</div>
								</div>
							</div>
						</div>
						{% endif %}
					</div>

					<div class="sidebar col-md-3">
						<div class="widget other-services">
							<h4 class="title">Other Products</h4>
							<ul>
								{% for item in productLinks %}
								<li><a href="/products/{{item.slug}}">{{item.title}}</a></li>
								{% endfor %}
							</ul>
						</div>
						<div class="widget pdf-download">
							<h4 class="title">PDF Download</h4>
							<ul>
								{% for item in product.datasheets %}
								<li>
									<a href="/ul/{{item.file.filename}}" target="_blank">
										<span>
											<i class="fa {% if item.file.filetype =='text/html'%}fa-file-code-o{%else%}fa-file-pdf-o{%endif%}"></i>
										</span>{{item.title}}
									</a>
								</li>
								{% endfor %}
							</ul>
						</div>
					</div>
				</div>
				<div class="contact-us-banner text-center wow fadeIn" data-wow-delay="1.2s">
					<h1>Are you ready to work with us?</h1>
					<a href="/contact" class="button-normal">Contact Us Now</a>
				</div>
			</div>
		</div>
	</div>
</section>
{% endblock %}